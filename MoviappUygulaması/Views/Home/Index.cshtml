@using Microsoft.VisualBasic
@model IEnumerable<MoviappUygulaması.Models.Movie>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1>Album example</h1>
        <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
        <p>
            <a href="#" class="btn btn-primary my-2">Main call to action</a>
            <a href="#" class="btn btn-secondary my-2">Secondary action</a>
        </p>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
       
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <img  width="100%" height="250px" src="~/img/@movie.Image"/>
                            <p class="card-text">@movie.Name</p>
                             <div class="card-footer text-muted">
                                 <a asp-action="Details"  asp-controller="Home" asp-route-id="@movie.ID" class="btn btn-primary" style="color: #ffffff;">Details</a>
                              </div>
                            <div class="d-flex justify-content-between align-items-center">
                                
                                <small class="text-muted">9 mins</small>
                              
                                    
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>